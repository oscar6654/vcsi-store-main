  }
  .quotes-carousel .body-carousel {
    font-size: 14px;
    padding: 10px 0;
    color: #444;
  }
  .quotes-carousel .author-name {
    font-style: italic;
    font-weight: normal;
    padding: 0 20px 0 0;
  }
