<div class="hidden-xs hidden-sm">
<% if !::SpreeQuotesManagement::Config[:disable_quote] %>
  <% if @top_quotes.present? %>

    <div class='quotes-carousel'>
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators1">
          <% @top_quotes.each_with_index do |slide, index| %>
            <li data-target="#carousel-prod" data-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %>"></li>
          <% end %>
        </ol>

        <div class="carousel-inner owl-carousel" role="listbox" >
          <% @top_quotes.each_with_index do |quote, index| %>
            <div class="item <%= index == 0 ? 'active' : '' %>">
              <div class="body-carousel" style="" >
                <span class="testimonial-text">
                  <%= quote.description %>
                </span>
                <div class='author-name pull-right'>
                  - <%= present(quote).author_name %>
                </div>
              </div>
            </div>
          <% end %>
        </div>


      </div>
    </div>
  <% end %>



<% end %>

</div>

<% if spree_current_user %>
  <div id='user_quotes_new_form' class='row row-no-margin hidden-xs hidden-sm'>
    <%= render partial: 'spree/quotes/form', locals: { quote: @quote } %>
  </div>
<% end %>



<script>

var owl = $('.owl-carousel');
owl.owlCarousel({
    items:1,
    loop:true,
    margin:10,
    autoHeight:true,
    autoplay:true,
    autoplayTimeout:3000,
    touchDrag: true,
    autoplayHoverPause:true

});

// hidden-lg hidden-md
</script>


